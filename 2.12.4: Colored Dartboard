speed(10)

penup()
setposition(0,-100)
pendown()

def daire_ciz ():
    radius = 100
    for i in range(4):
        color_choice = input("Bir renk sec: ")
        color(color_choice)
        begin_fill()
        circle(radius)
        end_fill()
        penup()
        left(90)
        forward(25)
        right(90)
        pendown()
        radius = radius - 25
        
daire_ciz()
